<div class="container mb-3">
    <h2> Edit an event </h2>

 <%= simple_form_for @event do |f| %>
    <%= f.input :title %>
    <%= f.input :location %>
    <%= f.input :category %>
    <%= f.input :description %>
    <%= f.input :visibility %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :availability %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: "btn btn-flat" %>
 <% end %>
