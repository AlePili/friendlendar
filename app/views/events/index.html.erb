
  <div class="container">
  <br>
    <h1 class="text-left ps-2">Dicover your friends events (<%= @friends_events.count %>)</h1>
    <div class="row">
      <% @friends_events.each do |event| %>
        <%= link_to event_path(event), class: "col-3" do %>
          <div class="booking-card">
            <div class="booking-card-header">
              <%  if event.photo.attached? %>
                <%= cl_image_tag event.photo.key%>
              <% else %>
                <%=  image_tag('crowd.png', width: 400, height: 260) %>
              <% end %>
            </div>
            <div class="booking-card-body d-flex justify-content-start">
              <h4 class="h-100 d-inline-block" style="min-height: 57px; min-height: 57px"">
                <%= event.title %>
              </h4>
              <div class="d-flex w-100 justify-content-between">
                <span class="booking-tag booking-tag-teal mb-3"><%= event.category %></span>
                <small >👫Availability: <%=event.availability%></small>
              </div>
              
              <div class="row justify-content-between">
                <p class="col-5"><strong>📍 Location:</strong></p>
                <p class="col-7"><%= event.location %></p>
              </div>
              <div class="row justify-content-between">
                <p class="col-5"><strong>🗓 Date:</strong></p>
                <p class="col-7"><%= event.start_time.strftime('%a, %b %d at %H:%M')%></p>
              </div>
              <div class="booking-user">

                <div class="d-flex justify-content-between align-items-center m-0">
                <%  if event.user.photo.attached? %>
                  <%= cl_image_tag event.user.photo.key%>
                <% else %>
                  <%=  image_tag('crowd.png', width: 400, height: 260) %>
                <% end %>
                  <small><strong><%= event.user %></strong></small>
                </div>
              </div>
            </div>
          </div>
          <% end %>
      <% end %>
      </div>