<div class= "outer_box">
  <div class="container">
    <div class="apple">
      <%= form_with url: events_path, method: :get, class: "d-flex" do |form| %>
        <%= form.collection_check_boxes(:query, @categories, :to_s, :to_s) do |b| %>
          <div class="tag-item">
            <%= b.label(class: "form-check-input check_boxes optional tag-selector") %>
            <%= b.check_box(class: "form-check-input check_boxes optional tag-selector") + b.text %>
          </div>
        <% end %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="conatiner">
    <h1>Dicover your friends events</h1>
    <div class="booking-cards-container">
      <% @friends_events.each do |event| %>
        <%= link_to event_path(event) do%>
          <div class="booking-card">
            <div class="booking-card-header">
              <%  if event.photo.attached? %>
                <%= cl_image_tag event.photo.key%>
              <% else %>
                <%=  image_tag('crowd.png', width: 400, height: 260) %>
              <% end %>
            </div>
            <div class="booking-card-body">
              <span class="booking-tag booking-tag-teal"><%= event.category %></span>
              <h4>
                <%= event.title %>
              </h4>
              <p>📍
                <%= event.location %>
              </p>
              <p>🗓<%= event.start_time.strftime('%A, %B %d at %H:%M')%></p>
              <div class="booking-user">
                <%  if event.user.photo.attached? %>
                  <%= cl_image_tag event.user.photo.key%>
                <% else %>
                  <%=  image_tag('crowd.png', width: 400, height: 260) %>
                <% end %>

                <div class="booking-user-info">
                  <h5><%= event.user %></h5>


                  <small>👫Availability: <%=event.availability%></small>
                </div>
              </div>
            </div>
          </div>
          <% end %>
      <% end %>
      </div>
  </div>
</div>
