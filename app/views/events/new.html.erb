
<div class="calendar" style="background-image: url(<%= asset_path 'calendar-page.jpg' %>)">
   <div class="container my-3">
      <div class="text-center">
         <h2> Create an event </h2>
         <div class="container-form my-5" style="background-color: white">
            <%= simple_form_for @event do |f| %>
               <%= f.input :title %>
               <%= f.input :category %>
               <%= f.input :description %>
               <%= f.input :visibility %>
               <%= f.input :start_time %>
               <%= f.input :end_time %>
               <%= f.input :availability %>
               <%= f.input :photo, as: :file %>
               <%= f.submit class: "btn btn-flat" %>
            <% end %>
         </div>
      </div>
   </div>
</div>