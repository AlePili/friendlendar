<div class="container-form">

 <h2> Create an event </h2>
 <div class="mt-4">
   <%= simple_form_for @event do |f| %>
      <%= f.input :title %>
      <%= f.input :location %>
      <%= f.input :category, :collection => %w[Drinks Cinema Concert Festival Workshop&Classes Charity Theater] %> 
      <%= f.input :description %>
         <div class="row">
            <div class="col-6">
            <%= f.input :start_time, as: :date, html5:true, label: "Date" %> 
            </div>
            <div class="col-6">
               <%= f.input :start_time, as: :time, html5:true %> 
            </div>
         </div>
         <%= f.input :availability, collection: 2..30, label: "Number of guests" %>
         <%= f.input :photo, as: :file %>
         <div class="mt-5">
            <%= f.submit class: "btn btn-flat" %>
         </div>
   <% end %>
 </div>

</div>
